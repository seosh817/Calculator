<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
            android:id="@+id/inputText"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="150dp"
            ></TextView>
    <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/inputText"
            android:stretchColumns="0,1,2,3">
    <TableRow>
        <Button
                android:id="@+id/clear"
                android:text="C"
             android:layout_column="1">

        </Button>
        <Button
                android:id="@+id/delete"
                android:text="DEL"
                android:layout_column="1">

        </Button>
        <Button
                android:id="@+id/remainder"
                android:text="%"
                android:layout_column="1">

        </Button>
        <Button
                android:id="@+id/divide"
                android:text="/"
                android:layout_column="1">
        </Button>

    </TableRow>
        <TableRow>
            <Button
                    android:id="@+id/seven"
                    android:text="7"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/eight"
                    android:text="8"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/nine"
                    android:text="9"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/multiply"
                    android:text="*"
                    android:layout_column="1">
            </Button>

        </TableRow>
        <TableRow>
            <Button
                    android:id="@+id/four"
                    android:text="4"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/five"
                    android:text="5"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/six"
                    android:text="6"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/minus"
                    android:text="-"
                    android:layout_column="1">
            </Button>
        </TableRow>
        <TableRow>
            <Button
                    android:id="@+id/one"
                    android:text="1"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/two"
                    android:text="2"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/three"
                    android:text="3"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/plus"
                    android:text="+"
                    android:layout_column="1">
            </Button>

        </TableRow>
        <TableRow>
            <Button
                    android:id="@+id/negative"
                    android:text="Â±"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/zero"
                    android:text="0"
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/decimal"
                    android:text="."
                    android:layout_column="1">

            </Button>
            <Button
                    android:id="@+id/result"
                    android:text="="
                    android:layout_column="1">
            </Button>
        </TableRow>

    </TableLayout>

</RelativeLayout>

